<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unvired.sample.sap">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.StartUpActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:path="unvired.com"
                    android:scheme="unv" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/title_activity_home" />
        <activity
            android:name=".activities.CreatePersonActivity"
            android:label="@string/title_activity_create_person" />
        <activity
            android:name=".activities.GetPersonActivity"
            android:label="@string/title_activity_get_person" />

        <activity
            android:name=".activities.PersonDetailActivity"
            android:label="@string/title_activity_person_detail"
            android:theme="@style/AppTheme" />

        <!-- FCM Start -->

        <service android:name=".util.FCMReceiver">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service android:name="com.unvired.fcm.RegisterToFCM">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <!-- FCM End -->

    </application>

</manifest>